{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"lint": {
			"outputs": [],
			"cache": false
		},
		"format": {
			"outputs": [],
			"cache": false
		},
		"dev": {
			"cache": false
		},
		"sort": {
			"cache": false
		},
		"package": {
			"outputs": ["package"],
			"cache": false
		},
		"pub": {
			"dependsOn": ["^package", "^generate-types"],
			"outputs": [],
			"cache": false
		},
		"pub:test": {
			"dependsOn": ["^package", "^generate-types"],
			"outputs": [],
			"cache": false
		},
		"generate-types": {
			"dependsOn": ["^package"],
			"outputs": ["package/types"],
			"cache": false
		},
		"test": {
			"dependsOn": ["format", "lint"],
			"outputs": [],
			"cache": false
		},
		"update:lockfile": {
			"outputs": [],
			"cache": false
		},
		"coverage": {
			"dependsOn": ["format", "lint"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"watch": {
			"outputs": [],
			"cache": false
		}
	}
}
